<div class="flex flex-col">
  <div class="h-40 w-40 mx-auto">
    <div class="aspect-w-1 aspect-h-1 -mt-6">
      <img
        id="profile-image"
        src="/profile_dark.webp"
        class="object-cover dark:hidden object-center transition-all ease-out duration-300 hover:scale-105"
        alt="profile picture pau pallares ssanjua"
      />
      <img
        id="profile-image"
        src="/profile_light.webp"
        class="object-cover object-center hidden dark:block transition-all ease-out duration-300 hover:scale-105"
        alt="small devices profile picture ssanjua"  
      />
    </div>
  </div>
  <div class="text-center py-3">
    <div class="flex justify-center items-center">
      <h1
        id="ssanjua"
        class="title-text z-50 text-2xl -mt-8 font-bold shadow-custom-pink dark:shadow-custom-yellow bg-dark text-light dark:bg-light dark:text-dark py-1 px-4 transition-all ease-out duration-300 hover:scale-105"
      >
        SSANJUA
      </h1>
    </div>
    <p class="mt-3 text-dark dark:text-light font-bold text-sm mb-2"><span class="text-xs">aka</span> Paula Pallares</p>
    <!-- <div class="border-t border-gray-600 dark:border-light mx-20 mt-1 mb-2"></div> -->
    <p class="description-text text-dark dark:text-white text-sm font-semibold">
      👩🏻‍💻 full stack developer  </br>
      🎥 filmmaker | 🎮gamer  </br>
      🌄 from San Juan, 🇦🇷 </br>
      📍 currently in Barcelona, 🇪🇸 </br>
    </p>
  </div>
  
</div>
<script type="module" is:inline>
  const colors = [
    "#0a996f",
    "#0a6789",
    "#cf0638",
    "#fa6632",
    "#B43EFE",
    "#E54980",
    "#fecd23",
  ];

  const h3Element = document.getElementById("ssanjua");

  h3Element.addEventListener("mouseover", () => {
    const randomColor = colors[Math.floor(Math.random() * colors.length)];
    h3Element.style.backgroundColor = randomColor;
  });

  h3Element.addEventListener("mouseout", () => {
    h3Element.style.backgroundColor = "";
  });
</script>
